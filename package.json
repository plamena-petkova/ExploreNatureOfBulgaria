{
  "name": "explorenatureofbulgaria",
  "version": "1.0.0",
  "description": "Project create for practicing advanced css",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.com.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.com.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Plamena",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "node-sass": "^9.0.0"
  },
  "dependencies": {
    "concat": "^1.0.3",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.0"
  }
}
